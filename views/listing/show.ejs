<% layout("layout/boilerplate") %>

<div class="row">
    <div class="col-8 offset-3">
        <h1>Listing Details</h1>
    </div>

    <div class="card col-6 offset-3 mt-3 show-card">
        
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">

        <div class="card-body">
            <div class="card-text">

                <b><%= listing.title %></b>
                <br><br>

                <%- listing.description %>
                <br><br>

                â‚¹ <%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.country %> <br>
                <%= listing.location %> <br>
            </div>
        </div>

    </div>

    <!-- Buttons Section -->
    <div class="col-6 offset-3 d-flex justify-content-start gap-3 mb-5">

        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">
            Edit
        </a>

        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">
                Delete
            </button>
        </form>

    </div>
<div class="col-8 offset-3 mb-3">
    <br/>
    <h2>Leave a Review</h2>
    <form action="/listings/<%= listing._id %>/review" method="post" class="needs-validation" novalidate>
        <div class="mb-3 mt-3">
            <label for = "rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"  required>

        </div>
        <div class="mb-3 mt-3">
            <label for ="comment" class="form-label">Comment</label>
            <textarea  
            name="review[comment]" 
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
             required
            ></textarea>
            <div class="invalid-feedback">pls enter feedback!</div>
        </div>
        <button type="submit" class="btn btn-outline-dark">submit</button>
    </form>
    <Br><br/>
        <hr>
<hr>
<h3 class="mb-3">All Reviews</h3>

<div class="row">
    <% for (review of listing.reviews) { %>
        <div class="col-12 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <h5 class="card-title">
                        Rating:
                        <span class="badge bg-warning text-dark">
                            <%= review.rating %> / 5
                        </span>
                    </h5>

                    <p class="card-text"><%= review.comment %></p>

                    <small class="text-muted">
                        Posted on <%= review.createdAt.toDateString() %>
                    </small>

                    <!-- Delete button -->
                    <form action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" method="POST" class="mt-2">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            Delete
                        </button>
                    </form>

                </div>
            </div>
        </div>
    <% } %>
</div>

</div>
   
</div>
